%section
%h2 Income

= fields_for applicant do |af|
  %fieldset.inline
    %legend.form-label
      Status
    .form-group.form-group-compound
      %label.block-label{for: 'radio-status-single'}
        = af.radio_button :status, 'Single', {id: 'radio-status-single', name: 'radio-status-group'}
        Single
      %label.block-label{for: 'radio-status-couple'}
        = af.radio_button :status, 'Single', {id: 'radio-status-couple', name: 'radio-status-group'}
        Couple


  %fieldset.inline
    %legend.form-label
      Children
    .form-group.form-group-compound
      %label.block-label{for: 'radio-children-0'}
        = af.radio_button :num_dependent_children, 0, {id: 'radio-children-0', name: 'radio-children-group'}
        None
      %label.block-label{for: 'radio-children-2'}
        = af.radio_button :num_dependent_children, 1, {id: 'radio-children-1', name: 'radio-children-group'}
        1
      %label.block-label{for: 'radio-children-2'}
        = af.radio_button :num_dependent_children, 1, {id: 'radio-children-2', name: 'radio-children-group'}
        2
      %label.block-label{for: 'radio-children-3'}
        = af.radio_button :num_dependent_children, 1, {id: 'radio-children-3', name: 'radio-children-group'}
        3 or more

  %fieldset
    %legend.form-label
      Gross Monthly Income
    .form-group.form-group-compound
      %label.block-label{for: 'radio-children-0'}
        = af.radio_button :num_dependent_children, 0, {id: 'radio-children-0', name: 'radio-children-group'}
        Full Remission - 
        %span.emphasize
          £1,085 or less
      %label.block-label{for: 'radio-children-2'}
        = af.radio_button :num_dependent_children, 1, {id: 'radio-children-1', name: 'radio-children-group'}
        Part Remission - 
        %span.emphasize
          £1,086 - £5,085
      %label.block-label{for: 'radio-children-2'}
        = af.radio_button :num_dependent_children, 1, {id: 'radio-children-2', name: 'radio-children-group'}
        No Remission - 
        %span.emphasize
          £5,086 or more
      